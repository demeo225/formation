{# empty Twig template #}
{% extends 'base.html.twig' %} 
{% block javascripts %} 
   <script src = "https://code.jquery.com/jquery-3.6.0.min.js"></script> 
   
   <script>  
      $(document).ready(function(){   
         $("#loadpersonne").on("click", function(event){  
            $.ajax({  
               url:        '/personne/ajaxAction',  
               type:       'POST',   
               dataType:   'json',  
               async:      true,  
               
               success: function(data, status) {  
                  var e = $('<tr><th>Nom</th><th>Pr√©nom</th><th>Fichier</th></tr>');  
                  $('#personne').html('');  
                  $('#personne').append(e);  
                  
                  for(i = 0; i < data.length; i++) {  
                     personne = data[i];  
                     var e = $('<tr><td id = "nom"></td><td id = "prenom"><td id = "fichier"></td></tr>');
                     
                     $('#nom', e).html(personne['nom']);  
                     $('#prenom', e).html(personne['prenom']);  
                     $('#fichier', e).html(personne['fichier']);  
                     $('#personne').append(e);  
                  }  
               },  
               error : function(xhr, textStatus, errorThrown) {  
                  alert('Echec.');  
               }  
            });  
         });  
      });  
   </script> 
{% endblock %}  

